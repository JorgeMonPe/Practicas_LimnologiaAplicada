isbn = {1095-8541 (Electronic)$\backslash$r0022-5193 (Linking)},
issn = {00225193},
journal = {Journal of Theoretical Biology},
keywords = {Model,Nitrogen,Parasite,Phosphorus,Stoichiometry},
number = {1},
pages = {104--115},
pmid = {19068219},
title = {{Dangerous nutrients: Evolution of phytoplankton resource uptake subject to virus attack}},
volume = {257},
