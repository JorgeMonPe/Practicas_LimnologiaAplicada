doi = {10.1080/07438140309354086},
file = {:home/jorge/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Beutel - 2003 - Hypolimnetic anoxia and sediment oxygen demand in california drinking water reservoirs.pdf:pdf},
