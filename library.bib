isbn = {0142-7873},
issn = {01427873},
journal = {Journal of Plankton Research},
number = {1},
pages = {1--14},
title = {{General patterns in the size scaling of phytoplankton abundance in coastal waters during a 10-year time series}},
volume = {32},
year = {2010}
