title = {{Production of the greenhouse gases CH {\textless}sub{\textgreater}4{\textless}/sub{\textgreater} and CO {\textless}sub{\textgreater}2{\textless}/sub{\textgreater} by hydroelectric reservoirs of the boreal region}},
