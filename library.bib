issn = {21698953},
journal = {Journal of Geophysical Research: Biogeosciences},
keywords = {ebullition,high-latitude lakes,methane},
month = {jul},
number = {3},
pages = {1307--1321},
publisher = {Blackwell Publishing Ltd},
title = {{Multiyear measurements of ebullitive methane flux from three subarctic lakes}},
