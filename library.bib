issn = {17264189},
journal = {Biogeosciences},
month = {jun},
number = {12},
pages = {3223--3245},
publisher = {Copernicus GmbH},
title = {{Dissolved CH4 coupled to photosynthetic picoeukaryotes in oxic waters and to cumulative chlorophyll ia/i in anoxic waters of reservoirs}},
