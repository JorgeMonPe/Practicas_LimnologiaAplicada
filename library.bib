issn = {14350629},
journal = {Ecosystems},
keywords = {Anoxia,Carbon dioxide,Dissolved oxygen,Greenhouse gases,Hypolimnetic oxygenation,Methane,Redox reactions,Terminal electron acceptor pathways,Whole-ecosystem experiment},
