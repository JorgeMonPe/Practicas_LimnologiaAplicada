journal = {Chemie der Erde},
keywords = {Carbon dioxide,Flux chamber,Methane,Methodology,Nitrous oxide,Soil emission drivers,Soil respiration},
pages = {327--352},
title = {{Chemie der Erde Greenhouse gas emissions from soils-A review}},
url = {http://creativecommons.org/licenses/by/4.0/},
volume = {76},
year = {2016}
