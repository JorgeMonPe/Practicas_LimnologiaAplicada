issn = {10275606},
journal = {Hydrology and Earth System Sciences},
month = {jan},
number = {1},
pages = {85--108},
title = {{Ensemble projections of future streamflow droughts in Europe}},
volume = {18},
year = {2014}
}
@article{Yang2014,
