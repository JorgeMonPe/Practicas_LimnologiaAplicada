issn = {00472425},
journal = {Journal of Environmental Quality},
month = {mar},
number = {2},
pages = {387--394},
publisher = {Wiley},
title = {{Greenhouse Gases in Non-Oxygenated and Artificially Oxygenated Eutrophied Lakes during Winter Stratification}},
