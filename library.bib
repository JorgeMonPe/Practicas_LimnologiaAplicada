doi = {10.1016/j.marchem.2007.01.006},
file = {:home/jorge/Descargas/explicit expression alk.pdf:pdf},
issn = {03044203},
journal = {Marine Chemistry},
keywords = {Calcification,Electroneutrality,Nitrogen fixation,Proton acceptors,Proton condition,Remineralization},
number = {1-2 SPEC. ISS.},
pages = {287--300},
title = {{Total alkalinity: The explicit conservative expression and its application to biogeochemical processes}},
volume = {106},
