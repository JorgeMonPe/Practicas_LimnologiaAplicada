issn = {00221694},
journal = {Journal of Hydrology},
keywords = {CO2 emissions,CO2 partial pressure (pCO2),Chinese Loess Plateau,Hard-water reservoir,Seasonal and diel variability},
month = {may},
publisher = {Elsevier B.V.},
title = {{Seasonal and diel variability of CO2 emissions from a semiarid hard-water reservoir}},
