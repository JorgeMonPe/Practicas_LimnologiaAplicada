isbn = {0099-2240},
issn = {00992240},
journal = {Applied and Environmental Microbiology},
number = {21},
pages = {6722--6729},
pmid = {17766446},
title = {{New and fast method to quantify respiration rates of bacterial and plankton communities in freshwater ecosystems by using optical oxygen sensor spots}},
