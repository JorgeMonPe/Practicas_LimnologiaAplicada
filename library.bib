doi = {10.1016/j.atmosenv.2016.12.051},
issn = {18732844},
journal = {Atmospheric Environment},
keywords = {Climate change,DOC,Mesocosm experiment,Peatlands,Qinghai-Tibetan Plateau},
pages = {323--329},
publisher = {Elsevier Ltd},
title = {{Responses of CO2 emission and pore water DOC concentration to soil warming and water table drawdown in Zoige Peatlands}},
