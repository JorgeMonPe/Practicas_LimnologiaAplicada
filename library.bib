journal = {Freshwater Biology},
keywords = {Lake,Review,Sediment,Sulphate reduction,Sulphur cycling},
month = {apr},
number = {4},
pages = {431--451},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Sulphate reduction and sulphur cycling in lake sediments: a review}},
url = {http://doi.wiley.com/10.1046/j.1365-2427.2001.00687.x},
volume = {46},
