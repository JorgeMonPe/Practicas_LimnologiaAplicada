journal = {Environ. Sci. Technol},
pages = {7297--7304},
title = {{Importance of the Autumn Overturn and Anoxic Conditions in the Hypolimnion for the Annual Methane Emissions from a Temperate Lake}},
url = {https://pubs.acs.org/sharingguidelines},
volume = {48},
year = {2014}
}
