journal = {Journal of Geophysical Research: Biogeosciences},
keywords = {,dam,eutrophication,greenhouse gas,hypoxia,storm},
month = {apr},
number = {4},
pages = {e2020JG006133},
publisher = {Blackwell Publishing Ltd},
title = {{Interaction Between Oxygen Consumption and Carbon Dioxide Emission in a Subtropical Hypoxic Reservoir, Southeastern China}},
url = {https://onlinelibrary.wiley.com/doi/10.1029/2020JG006133},
volume = {126},
