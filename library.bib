isbn = {1054-3139},
issn = {10543139},
journal = {ICES Journal of Marine Science},
keywords = {Excitable phytoplankton - zooplankton system,Mixotrophy,Plankton bloom},
number = {5},
pages = {833--840},
title = {{The role of mixotrophy in plankton bloom dynamics, and the consequences for productivity}},
volume = {62},
year = {2005}
}
