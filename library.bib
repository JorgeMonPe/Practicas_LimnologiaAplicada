issn = {09441344},
keywords = {Algae,Coastal marine ecosystems,Estuaries,Eutrophication,Harmful algal blooms,Lakes,Nitrogen,Nutrients,Phosphorus,Phytoplankton,Reservoirs,Rivers,Shallow lakes,Wetlands},
number = {2},
