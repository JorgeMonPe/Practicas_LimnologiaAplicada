file = {:home/jorge/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Kremer, Thomas, Litchman - 2017 - Temperature- and size-scaling of phytoplankton population growth rates Reconciling the Eppley curve an.pdf:pdf},
issn = {19395590},
journal = {Limnology and Oceanography},
title = {{Temperature- and size-scaling of phytoplankton population growth rates: Reconciling the Eppley curve and the metabolic theory of ecology}},
year = {2017}
}
