issn = {1751-7362},
journal = {Isme Journal},
keywords = {DOC,aquatic systems,bacterial production,bacterioplankton,c-n ratio,coastal waters,communities,ecosystem,estuary,growth efficiency,lability,matter,nitrogen,phytoplankton,respiration},
number = {8},
