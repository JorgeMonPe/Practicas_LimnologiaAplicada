pmid = {25551318},
publisher = {American Chemical Society},
title = {{Size does matter: Importance of large bubbles and small-scale hot spots for methane transport}},
url = {https://pubs.acs.org/doi/abs/10.1021/es5054286},
volume = {49},
year = {2015}
}
